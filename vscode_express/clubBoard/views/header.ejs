<script type="module">
  //파이어베이스 콘솔에서 지원하는 Authentification 빌드 사용해서 플젝을 진행하고 있다
  //export const app = initializeApp(firebaseConfig)
  //firebase.js에 정의되어 있으므로 import문이 필요함
  import { app } from "/javascripts/firebase.js";
  import { signOut, getAuth } from "https://www.gstatic.com/firebasejs/9.22.1/firebase-auth.js";
  const auth = getAuth(app);
  console.log(auth);
  //jquery - DOM API - 복잡하고, 가독성 제로 - jquery 제공하는 코드로 DOM 조작하기 위해 사용
  // document.getElementById("logout").addEventListener('click', () => {}) // DOM API - 복잡하고 가독성X
  //$(..) is not defined 발동 - index.js -> jquery-1.12.0.js import 확인 -> jquery('#id')
  $('#logout').on('click', () => { //jquery에서 제공되는 문법으로 이벤트 처리 중
    auth.signOut();
    //아래 코드는 location.href='/' 만나면 볼 수 없다 - 왜냐하면 주소 url이 바뀌니까
    //바뀌면 뭐? - 기존에 요청이 끊어지고 새로운 요청으로 처리되니까
    signOut(auth).then(() => { //콜백함수 실행
    // Sign-out successful.
    console.log("로그아웃 성공 - 구글서버");
    location.href="/"; // 로그아웃이 되면 처음으로 돌아가시오. -> http://localhost:3000/
    }).catch((error) => {
      console.log(error); //로그아웃 실패시 호출 - 로그 통해 정보 수집
    });
    localStorage.clear(); //BOM, DOM, firebase-app.js
  })

</script>
